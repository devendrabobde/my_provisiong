<style>

</style>
<div class="monitor-container">
	<div class="header">
		<h3>OneStop Monitoring Page</h3>
	</div>
	<div class="monitor-application">
		<h5><%= SERVER_CONFIGURATION[Rails.env]["onestop_service_name"] %></h5>
		<p>Application Version: <%= SERVER_CONFIGURATION[Rails.env]["onestop_code_version"] %></p>
		<p>Instance Name: <%= SERVER_CONFIGURATION[Rails.env]["onestop_server_instance_name"] %></p>

		<%# NOTE: This is hard coded because if the application database is not running then in that case we
		won't be able to view this page. %>
		<p>Database Server: <%= "Running" %></p>
		<p>Application Status: <%= "Running" %></p>
	</div>

	<div class="monitor-application">
		<h5><%= SERVER_CONFIGURATION[Rails.env]["epcs_service_name"] %></h5>
		<p>Application Version: <%= SERVER_CONFIGURATION[Rails.env]["epcs_code_version"] %></p>
		<p>Instance Name: <%= SERVER_CONFIGURATION[Rails.env]["epcs_server_instance_name"] %></p>
		<p>Database Server: No Database</p>
		<p>Application Status: <%= display_server_status(@connectivity[:epcs]) %></p>
	</div>

	<div class="monitor-application">
		<h5><%= SERVER_CONFIGURATION[Rails.env]["supernpi_service_name"] %></h5>
		<p>Application Version: <%= SERVER_CONFIGURATION[Rails.env]["supernpi_code_version"] %></p>
		<p>Instance Name: <%= SERVER_CONFIGURATION[Rails.env]["supernpi_server_instance_name"] %></p>
		<p>Database Server: <%= display_server_status(@connectivity[:super_npi]) %></p>
		<p>Application Status: <%= display_server_status(@connectivity[:super_npi]) %></p>
	</div>

	<div class="monitor-application">
		<h5><%= SERVER_CONFIGURATION[Rails.env]["router_service_name"] %></h5>
		<p>Application Version: <%= SERVER_CONFIGURATION[Rails.env]["router_code_version"] %></p>
		<p>Instance Name: <%= SERVER_CONFIGURATION[Rails.env]["router_server_instance_name"] %></p>
		<p>Database Server: <%= display_server_status(@connectivity[:router]) %></p>
		<p>Application Status: <%= display_server_status(@connectivity[:router]) %></p>
	</div>

</div>