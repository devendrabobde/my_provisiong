<div class="content">
  <div class="container">
    <div class="row">
      <div class="span5 offset4">
        <h2 class="widget-header">Change your password</h2>
         <div class="widget-body">
            <div class="center-align">

     <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, id: "new_cao" }) do |f| %>
         <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
          <table>
            <tbody>
              <tr>
            <td style="padding-left:5px;"><div ><%= f.label :password, "New password" %></td>
            <td style="padding-left:10px;"><%= f.password_field :password, :autofocus => true, required: true %></div></td>
              </tr>
              <tr>
            <td style="padding-left:5px;"><div><%= f.label :password_confirmation, "Confirm new password" %></td>
            <td style="padding-left:10px;"><%= f.password_field :password_confirmation, required: true %></div></td>
              </tr>
              <tr>
            <td style="padding-left:5px;"><div><%= f.label :security_question, "Security Question" %></td>
            <td style="padding-left:10px;"><%= select_tag 'cao[security_question]', options_for_select(SECURITY_QUESTIONS, @coa.try(:security_question)), { prompt: "Select Security Question", required: true } %></div></td>
              </tr>
              <tr>
            <td style="padding-left:5px;"><div><%= f.label :security_answer, "Security Answer" %></td>
            <td style="padding-left:10px;"><%= f.text_field :security_answer, required: true %></div></td>
              </tr>
            </tbody>
          </table>
      <div><%= f.submit "Change my password", :class=>"btn btn-primary" %></div>
    <% end %>
   </div>
          </div>

  <%#= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
