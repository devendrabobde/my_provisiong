<%= form_for([:admin, organization, coa], html: { id: id }) do |f| %>
  <div>
    <%= label_tag "First Name", "First Name <span class='red'>*</span>".html_safe %>
    <%= f.text_field :first_name, autofocus: true, required: true %>
  </div>
  <div>
    <%= label_tag "Last Name", "Last Name <span class='red'>*</span>".html_safe %>
    <%= f.text_field :last_name, required: true %>
  </div>
  <div>
    <%= label_tag "Username", "Username <span class='red'>*</span>".html_safe %>
    <%= f.text_field :username, required: true %>
  </div>
  <div>
    <%= label_tag "Email", "Email <span class='red'>*</span>".html_safe %>
    <%= f.email_field :email, required: true %>
  </div>
  <div>
    <%= label_tag "Password", "Password <span class='red'>*</span>".html_safe %>
    <%= f.password_field :password, required: true %>
  </div>
  <div>
    <%= f.label :profile_id %>
    <%= select_tag 'cao[fk_profile_id]', options_from_collection_for_select(@profile_list, "id", "profile_name") %>
  </div>
  <div>
    <%= f.label :role_id %>
    <%= select_tag 'cao[fk_role_id]', options_from_collection_for_select(@role_list, "id", "name") %>
  </div><br/>
  <div>
    <%= f.submit @cao.new_record? ? 'Create' : 'Update', :class => "btn btn-primary" %>
  </div>
<% end %>
