<div class="content">
  <div class="container">
    <div class="row">
      <div class="span4 offset4">
        <h4 class="widget-header">Forgot your password?</h3>
          <div class="widget-body">
            <div class="center-align">
        <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
                  <table>
                    <tbody>
                      <tr>
                   <%= devise_error_messages! %>
                      </tr>
                      <tr>
                 <td style="padding-left:20px;"> <%= f.label :email %> </td>
                 <td style="padding-left:13px;padding-bottom:5px;"> <%= f.email_field :email, :autofocus => true %> </td>
                      </tr>
                    </tbody>
                  </table>
                  <div><%= f.submit "Send me reset password instructions", :class=>"btn btn-primary"%></div>
        <% end %>
        <%#= render "devise/shared/links" %>
     </div>
        </div>
      </div>
    </div>
  </div>
</div>
