<%= form_for([:admin, @organization]) do |f| %>
  <div>
    <%= f.label :name, 'Organization Name' %>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div>
    <%= f.label :address1, 'Address1' %>
    <%= f.text_field :address1 %>
  </div>
  <div>
    <%= f.label :address2, 'Address2' %>
    <%= f.text_field :address2 %>
  </div>
  <div>
    <%= f.label :city, 'City' %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :state_code, 'State' %>
    <%= f.select :state_code, US_STATES, { prompt: 'Select State' } %>
  </div>
  <div>
    <%= f.label :zip_code, 'Zip Code' %>
    <%= f.text_field :zip_code %>
  </div>
  <div>
    <%= f.label :postal_code, 'Postal Code' %>
    <%= f.text_field :postal_code %>
  </div>
  <div>
    <%= f.label :country_code, 'Country Code' %>
    <%= f.text_field :country_code %>
  </div>
  <div>
    <%= f.label :contact_first_name, 'Contact First Name' %>
    <%= f.text_field :contact_first_name %>
  </div>
  <div>
    <%= f.label :contact_last_name, 'Contact Last Name' %>
    <%= f.text_field :contact_last_name %>
  </div>
  <div>
    <%= f.label :contact_phone, 'Contact Phone' %>
    <%= f.text_field :contact_phone %>
  </div>
  <div>
    <%= f.label :contact_fax, 'Contact Fax' %>
    <%= f.text_field :contact_fax %>
  </div>
  <div>
    <%= f.label :contact_email, 'Contact Email' %>
    <%= f.text_field :contact_email %>
  </div>
  <div>
    <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
